<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawel.orlikapp.ui.select_city.SelectCityActicity">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
       <EditText
           android:id="@+id/serachEditText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:maxLines="1"
           android:padding="10dp"
           android:drawableRight="@drawable/ic_youtube_searched_for_black_24dp"
           android:textSize="18sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <ListView
                    android:id="@+id/citiesListView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"></ListView>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>
