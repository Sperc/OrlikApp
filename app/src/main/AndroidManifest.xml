<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pawel.orlikapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.OrlikApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.base.BaseActivity" />
        <activity android:name=".ui.menu.main.MainActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.registration.RegistrationActivity" />
        <activity android:name=".ui.my_team.MyTeamsActivity" />
        <activity android:name=".core.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.select_city.SelectCityActicity"></activity>
    </application>

</manifest>